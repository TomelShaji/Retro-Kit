<%- include('../userLayouts/userProfileSidebar.ejs') %>


<section>
    <div class="container">
        <form class="form-horizontal" method="post" action="/updatePassword">
            <!-- Form Name -->
            <legend class="text-center">Update Password</legend>
          
            <!-- New Password -->
            <div class="form-group">
                <label class="col-md-12 control-label text-center" for="newPassword">New Password</label>
                <div class="col-md-4 offset-md-4 text-center">
                  <input name="newPassword" class="form-control input-md">
                </div>
              </div>

              <!--Confirm New Password -->
            <div class="form-group">
                <label class="col-md-12 control-label text-center" for="confirmPassword">Confirm New Password</label>
                <div class="col-md-4 offset-md-4 text-center">
                  <input name="confirmPassword" class="form-control input-md">
                </div>
              </div>
          
            <!-- submit-->
            <div class="form-group">
                <div class="col-md-12 text-center">
                  <button type="submit" class="btn btn-success">Update</button>
                </div>
              </div>
        
          </form>
    </div>
</section>

